# examples/phase3col/terraform.tfvars
# Phase 3: Collector Deployment

# GCP Authentication & Project
project_id       = "Customer_Project_ID"
region           = "us-central1"
zone             = "us-central1-a"
credentials_file = "./key.json"

# Network Configuration (use existing from Phase 0)
network_name = "guardium-vpc"
subnet_name  = "guardium-subnet"
subnet_cidr  = "10.0.0.0/24"

# Network Infrastructure (use existing from Phase 0)
use_existing_vpc    = true
use_existing_subnet = true

# Guardium Image Configuration

guardium_collector_image_id = "projects/aesthetic-frame-155821/global/images/guardium-v12-1-collector"
guardium_machine_type       = "n2-highmem-4"

# Collector Configuration Files
col_config_json_path    = "collector_config.json"
col_instances_json_path = "collector_config.json"

# Labels
labels = {
  project     = "guardium"
  environment = "production"
  managed_by  = "terraform"
  component   = "collector"
  phase       = "3"
  platform    = "gcp"
}

